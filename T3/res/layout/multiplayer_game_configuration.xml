<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android1:id="@+id/textView1"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentTop="true"
        android1:layout_centerHorizontal="true"
        android1:text="Game Configuration"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioGroup
        android1:id="@+id/boardSizes"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentLeft="true"
        android1:layout_below="@+id/textView1"
        android1:layout_marginLeft="23dp"
        android1:layout_marginTop="30dp"
        android1:onClick="onBoardSizeButtonClicked" >

        <RadioButton
            android1:id="@+id/three"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="3x3"
            android1:onClick="onBoardSizeButtonClicked" />

        <RadioButton
            android1:id="@+id/four"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="4x4"
            android1:onClick="onBoardSizeButtonClicked" />

        <RadioButton
            android1:id="@+id/five"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="5x5"
            android1:onClick="onBoardSizeButtonClicked" />
    </RadioGroup>

    <TextView
        android1:id="@+id/textView5"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/timeoutThresholds"
        android1:layout_alignLeft="@+id/timeoutThresholds"
        android1:text="Timeout"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android1:id="@+id/timeoutThresholds"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentRight="true"
        android1:layout_alignTop="@+id/boardSizes"
        android1:layout_marginRight="20dp"
        android1:onClick="onTimeoutButtonClicked" >

        <RadioButton
            android1:id="@+id/fifteen"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:checked="true"
            android1:text="15 sec."
            android1:onClick="onTimeoutButtonClicked" />

        <RadioButton
            android1:id="@+id/thirty"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="30 sec."
            android1:onClick="onTimeoutButtonClicked" />

        <RadioButton
            android1:id="@+id/fortyfive"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="45 sec."
            android1:onClick="onTimeoutButtonClicked" />
    </RadioGroup>

    <TextView
        android1:id="@+id/textView2"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/hostIp"
        android1:layout_alignParentLeft="true"
        android1:text="Enter Host IP Here"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android1:id="@+id/hostIp"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentLeft="true"
        android1:layout_alignTop="@+id/joinGameButton"
        android1:ems="10"
        android1:inputType="text" />

    <Button
        android1:id="@+id/joinGameButton"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_alignParentBottom="true"
        android1:layout_alignParentRight="true"
        android1:layout_toRightOf="@+id/hostIp"
        android:onClick="onMenuButtonClicked"
        android1:text="Join Game!" />

    <TextView
        android1:id="@+id/textView3"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView2"
        android1:layout_alignParentLeft="true"
        android1:text="Join Game"
        android1:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android1:id="@+id/hostGameButton"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/textView3"
        android1:layout_centerHorizontal="true"
        android1:layout_marginBottom="48dp"
        android1:onClick="onMenuButtonClicked"
        android1:text="Host &amp; Play!" />

    <TextView
        android1:id="@+id/textView4"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/timeoutThresholds"
        android1:layout_alignLeft="@+id/boardSizes"
        android1:text="Board Size"
        android1:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:id="@+id/gameTypes"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:layout_alignLeft="@+id/boardSizes"
        android1:layout_alignRight="@+id/timeoutThresholds"
        android1:layout_below="@+id/boardSizes"
        android1:layout_marginTop="30dp"
        android1:onClick="onGameTypeSelected" >

        <RadioButton
            android1:id="@+id/manVsManButton"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="Man vs. Man"
            android1:onClick="onGameTypeSelected" />

        <RadioButton
            android1:id="@+id/aiVsAiButton"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="AI vs. AI"
            android1:onClick="onGameTypeSelected" />
    </RadioGroup>

    <TextView
        android1:id="@+id/IPText"
        android1:layout_width="wrap_content"
        android1:layout_height="wrap_content"
        android1:layout_above="@+id/hostGameButton"
        android1:layout_centerHorizontal="true"
        android1:text="TextView.IPText" />

</RelativeLayout>