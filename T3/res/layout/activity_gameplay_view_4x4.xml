<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GameplayView" >

    <!-- Row 1 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/row1col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row1col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row1col3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
        
        <ImageButton
            android:id="@+id/row1col4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
    </LinearLayout>

    <!-- Row 2 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/row2col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row2col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row2col3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
        
        <ImageButton
            android:id="@+id/row2col4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
    </LinearLayout>

    <!-- Row 3 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/row3col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row3col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row3col3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
        
        <ImageButton
            android:id="@+id/row3col4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
    </LinearLayout>
    
    <!-- Row 4 -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/row4col1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row4col2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />

        <ImageButton
            android:id="@+id/row4col3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
        
        <ImageButton
            android:id="@+id/row4col4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onButtonClicked"
            android:src="@drawable/blank_graphic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/victoryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:text="@string/gameOutcome" />
    </LinearLayout>
    <Button
        android:id="@+id/cloudSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReplayButtonClicked"
        android:text="Save Game to Cloud" />
    
            <Button
        android:id="@+id/nextMove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReplayButtonClicked"
        android:text="Next Move" />
</LinearLayout>