<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:android1="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent">

	<TextView android:id="@+id/textView1" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true" android:layout_marginTop="56dp"
		android:text="Game Configuration" android:textAppearance="?android:attr/textAppearanceLarge" />

	<RadioGroup android1:id="@+id/boardSizes"
		android1:layout_width="wrap_content" android1:layout_height="wrap_content"
		android1:layout_alignParentLeft="true" android1:layout_below="@+id/textView1"
		android1:layout_marginLeft="23dp" android1:layout_marginTop="30dp">

		<RadioButton android1:id="@+id/three"
			android1:layout_width="wrap_content" android1:layout_height="wrap_content"
			android1:checked="true" android1:text="3x3" />

		<RadioButton android1:id="@+id/four"
			android1:layout_width="wrap_content" android1:layout_height="wrap_content"
			android1:text="4x4" />

		<RadioButton android1:id="@+id/five"
			android1:layout_width="wrap_content" android1:layout_height="wrap_content"
			android1:text="5x5" />
	</RadioGroup>

	<RadioGroup android1:id="@+id/timeoutThresholds"
		android1:layout_width="wrap_content" android1:layout_height="wrap_content"
		android1:layout_alignParentRight="true" android1:layout_alignTop="@+id/boardSizes"
		android1:layout_marginRight="20dp">

		<RadioButton android1:id="@+id/ten" android1:layout_width="wrap_content"
			android1:layout_height="wrap_content" android1:checked="true"
			android1:text="10 sec." />

		<RadioButton android1:id="@+id/twenty"
			android1:layout_width="wrap_content" android1:layout_height="wrap_content"
			android1:text="20 sec." />

		<RadioButton android1:id="@+id/thirty"
			android1:layout_width="wrap_content" android1:layout_height="wrap_content"
			android1:text="30 sec." />
	</RadioGroup>

	<TextView android1:id="@+id/textView2" android1:layout_width="wrap_content"
		android1:layout_height="wrap_content" android1:layout_above="@+id/timeoutThresholds"
		android1:layout_alignLeft="@+id/boardSizes" android1:text="Board Sizes"
		android1:textAppearance="?android:attr/textAppearanceSmall" />

	<TextView android1:id="@+id/textView3" android1:layout_width="wrap_content"
		android1:layout_height="wrap_content" android1:layout_above="@+id/timeoutThresholds"
		android1:layout_alignRight="@+id/timeoutThresholds" android1:text="Timeout "
		android1:textAppearance="?android:attr/textAppearanceSmall" />

	<Button android1:id="@+id/playGame" android1:layout_width="wrap_content"
		android1:layout_height="wrap_content" android1:layout_below="@+id/timeoutThresholds"
		android1:layout_centerHorizontal="true" android1:layout_marginTop="46dp"
		android1:text="Play Game!" />

</RelativeLayout>